<%- include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>        
        <div class="col-md-6">
            <h2> Email Verification </h2>
        </div>
        <div class="col-md-3"></div>        
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="POST" action="/email-verification/resend">
                <div class="form-group">
                    <label for="email">Resend Verification Email</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email you signed up with">
                </div>
                <button type="submit" class="btn btn-primary">Resend</button>
            </form>
        </div>
        <div class="col-md-3"></div>        
    </div>
</div>

