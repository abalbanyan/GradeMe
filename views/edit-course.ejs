<%- include partials/header.ejs %>

<div class="container">

    <div class="row">
        <div class="col-md-6 col-centered">
            <h2>Course Customization Page</h2>
            <form action="#" method="post">
                <%- include partials/courseform.ejs %>
                <br>
                <h4>Student Code: <%= course.student_enrollment_code %></h4>
                <h4>Instructor Code: <%= course.instructor_enrollment_code %></h4>
                <br>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
            <button onclick="deleteCourse()" class="btn warning-button">Delete</button>
        </div>
    </div>
</div>

<script>
    // TODO: Add a confirmation dialogue box before deletion
    async function deleteCourse() {
        let response = await fetch('#', {
            credentials: 'same-origin', method: 'DELETE'
        });
        if(response.ok) {
            window.location.href = '/courses';
        } else {
            window.location.href = '/error';
        }
    }
</script>

