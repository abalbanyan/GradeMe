<%
var courseName = locals.course && course.name !== undefined ? course.name : "";
var courseDesc = locals.course && course.desc !== undefined ? course.desc : "";
var isVisible = locals.course && course.visible !== undefined ? course.visible : false;
%>

<div class="form-group">
    <label for="coursename">Course Name</label>
    <input type="text" class="form-control" id="coursename" name="course_name"
        placeholder="Course name" required value="<%= courseName %>" >
</div>

<div class="form-group">
    <label for="coursedesc">Course Description</label>
    <input type="text" class="form-control" id="coursedesc" name="course_desc"
        placeholder="A short description of the course"
        value="<%= courseDesc %>" >
</div>

<div class="form-check">
    <label for="studentvisible">Visible to Students</label>
    <input class="form-check-input" type="checkbox" name="course_visible"
        id="studentvisible" <% if(isVisible) { %> checked <% } %> >
</div>
