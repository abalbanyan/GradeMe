<%- include partials/header.ejs %>

<div class="container">

    <div class="row">
        <div class="col-md-3"></div>        
        <div class="col-md-6">
            <h2> Course List </h2>
        </div>
        <div class="col-md-3"></div>        
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <ul class="list-group">
            <% courselist.forEach(function(dat) { %>
                <!-- TODO: make this go to specific course page - How will we structure URLs? -->
                <a class="list-group-item list-group-item-action" href="/course">
                    <div class="container">
                        <div class="row justify-content-between">
                            <div class="col-9">
                                <b>Course Name:</b> <%= dat.courseName %> <br>
                                <b>Course Number:</b> <%= dat.courseNum%>
                            </div>
                            <div class="col-3">
                                <!-- TODO: Add delete course onclick handler 
                                    + logic to authenticate deletion (owns course).-->
                                <button type="button" class="btn btn-danger" onclick="">Delete Course</button>
                            </div>
                        </div>
                    </div>
                </a>
            <% }); %>
            </ul>
        </div>
        <div class="col-md-2"></div>        
    </div>
</div>

<%- include partials/footer.ejs %>
