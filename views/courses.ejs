<%- include partials/header.ejs %>

<div class="container">

    <div class="row">
        <div class="col-md-3"></div>        
        <div class="col-md-6">
            <h2> Course List </h2>
        </div>
        <div class="col-md-3"></div>        
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <ul class="list-group">
            <% courselist.forEach(function(dat) { %>
                <li class="list-group-item list-group-item-action">
                    <div class="container">
                        <div class="row">
                            <div class="col-8">
                                <b>Course Name:</b> <%= dat.courseName %> <br>
                                <b>Course Number:</b> <%= dat.courseNum%>
                            </div>
                            <div class="col">
                                <!-- TODO: Add delete course onclick handler 
                                    + logic to authenticate deletion (owns course).-->
                                <button type="button" class="btn btn-danger" onclick="">Delete Course</button>
                            </div>
                        </div>
                    </div>
                </li>
            <% }); %>
            </ul>
        </div>
        <div class="col-md-3"></div>        
    </div>
</div>

<%- include partials/footer.ejs %>
