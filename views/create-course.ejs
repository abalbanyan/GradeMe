<%- include partials/header.ejs %>

<div class="container">

    <div class="row">
        <div class="col-md-6 col-centered">
            <h2>Course Creation Page</h2>
        <% if (locals.course && course.student_enrollment_code !== undefined
            && course.instructor_enrollment_code !== undefined) { %>
                <h4>Class created successfully!</h3>
                <h3>Student Code: <%= course.student_enrollment_code %></h2>
                <h3>Instructor Code: <%= course.instructor_enrollment_code %></h2>
                <br>
                <a href="/courses" class="btn btn-info" role="button">Go Back To Courses</a>
            </div>
        <% } else { %>
                <% if(locals.error) { %>
                    <div class="alert alert-danger">
                        <%= locals.error %>
                    </div>
                <% } %>

                <form action="#" method="post">
                    <%- include partials/courseform.ejs %>
                    <br>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        <% } %>
    </div>
</div>

<%- include partials/footer.ejs %>
